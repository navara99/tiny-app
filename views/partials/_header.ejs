<header>

  <nav class="navbar navbar-expand-md navbar-dark" style="background-color: #AA336A;">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse " id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>

    <% if (user) { %>
      <form class="form-inline" style="color:white" action="/logout" method="POST">
        Logged in as: <%= user.email %> <button type="submit" class="btn btn-outline-light ml-3">Logout</button>
      </form>
      <% } %>

        <% if (!user) { %>
          <div>
            <a type="button" href="/login" class="btn btn-outline-light mr-2">Login</a>
            <a type="button" href="/register" class="btn btn-outline-light">Register</a>
          </div>
          <% } %>
  </nav>

</header>